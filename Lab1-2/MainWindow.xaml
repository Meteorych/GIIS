<Window x:Class="Lab1_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="455" Width="860"
        Background="Gray">
    <Grid>
        <Canvas Name ="MainCanvas" Margin="0,0,0,104" Background="White" MouseLeftButtonDown="Canvas_LeftButtonDown"/>
        <Button HorizontalAlignment="Center" Margin="0,346,0,0" VerticalAlignment="Top" Height="46" Width="108" FontSize="14">
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontSize="16" LineHeight="7" Width="72"><Run Text="Clear "/><LineBreak/><Run Text="Canvas"/><LineBreak/><Run/></TextBlock>
        </Button>
        <Grid HorizontalAlignment="Left" Margin="252,346,0,0" VerticalAlignment="Top" Width="100
              " Height="45">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <RadioButton x:Name="Eclipse" Checked="Draw" Content="Eclipse" Grid.Row="0" FontSize="16"  />
            <RadioButton x:Name="Circle" Checked="Draw" Content="Circle" Grid.Row="1" FontSize="16" />

        </Grid>
        <Grid Margin="522,349,238,0" VerticalAlignment="Top" Width="100" Height="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <RadioButton x:Name="Parabola" Checked="Draw" Content="Parabola" Grid.Row="0" Grid.Column="1" Width="260" FontSize="16" HorizontalAlignment="Center"/>
            <RadioButton x:Name="Hyperbola" Checked="Draw" Content="Hyperbola" Grid.Column="1" Width="260" FontSize="16" HorizontalAlignment="Center" Margin="0,20,0,0" Grid.RowSpan="2"/>
        </Grid>
    </Grid>
</Window>
